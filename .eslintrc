# ESLint rules
# http://eslint.org/docs/rules/

env:
    node: true

globals:
    describe:   true
    it:         true
    beforeEach: true
    afterEach:  true

rules:

    # General
    strict:   [ 2, "global" ]
    no-undef: 2

    # Best practices
    eqeqeq: 2
    curly:  2
    radix:  2

    # Whitespace
    array-bracket-spacing:       [ 1, "always" ]
    space-before-blocks:         [ 1, "always" ]
    space-before-function-paren: [ 1, "always" ]
    space-in-parens:             [ 1, "always" ]
    space-infix-ops:             1
    space-unary-ops:             [ 1, { "words": true, "nonwords": false } ]

    # Style
    camelcase: 1
    quotes:    [ 1, "single" ]
